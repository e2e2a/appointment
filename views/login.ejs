<%- include('partials/header/header'); %>
<%- include('partials/navigation/topbar-end'); %>
<%- include('partials/navigation/navbar'); %>
<div class="container wow zoomIn mt-5 " style="height: 70vh;" data-wow-delay="0.1s">
  <div class="row justify-content-center">
    <div class="col-lg-4">
      <div class="card shadow-lg mb-4 border-0">
        <div class="card-body ">
          <h3 class="fw-bold text-center m-0">LOGIN</h3>
          <hr class="border border-secondary border-1 opacity-50">
          <% if (messages.error) { %>
          <div class="text-center alert alert-danger " role="alert">
            <p><%= messages.error %></p>
          </div>
          <% } %>
          <div class=" h-100 d-flex flex-column justify-content-center text-center p-5 ">
            <form action="login" method="post">
              <div class="row g-3">
                <div class="form-floating col-12 col-sm-12">
                  <input type="email" class="form-control border-0" name="email" placeholder="Your Email" style="height: 55px;">
                  <label for="email">Email</label>
                </div>
                <div class="form-floating col-12 col-sm-12">
                  <input type="password" class="form-control border-0" name="password" placeholder="Your Password" style="height: 55px;">
                  <label for="password">Password</label>
                </div>
                <div class="col-12 mt-5">
                  <button class="btn btn-secondary w-100 py-3" type="submit">Login</button>
                </div>
              </div>
            </form>
          </div>
          <p class="text-center ">Lorem ipsum dolor sit amet <a href="/">home</a></p>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('partials/footer/footer'); %>